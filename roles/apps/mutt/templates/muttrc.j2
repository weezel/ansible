#color#
color normal		white black
color attachment	brightyellow black
color hdrdefault	cyan black
color indicator		black cyan
color markers		brightred black
color quoted		green black
color signature		cyan black
color status		brightgreen blue
color tilde		blue black
color tree		red black
color header		brightgreen black ^From:
color header		brightcyan black ^To:
color header		brightcyan black ^Reply-To:
color header		brightcyan black ^Cc:
color header		brightblue black ^Subject:
color body		brightred black [\-\.+_a-zA-Z0-9]+@[\-\.a-zA-Z0-9]+
color body		brightblue black (https?|ftp)://[\-\.\,/%~_:?\#a-zA-Z0-9]+

set config_charset	= utf-8
set send_charset	= utf-8

set realname		= "{{ansible_user_gecos}}"
set use_from		= yes
set envelope_from	= yes
set editor		= vim
set sort		= threads
set move		= no
set pager_index_lines	= 10
set signature		= ~/.signature
set header_cache	= ~/.mutt/cache/headers
set message_cachedir	= ~/.mutt/cache/bodies
set mbox_type		= "maildir"
set spoolfile		= "~/Maildir/"
set folder		= "~/Maildir/"
set mask		= "!^\\.[^.]"
set record		= "+sent"
set postponed		= "+drafts"
mailboxes ! + `\
for d in ~/Maildir/.*; do \
	dname=$(basename "${d}"); \
	[[ "${dname}" == '.' ]] && continue; \
	[[ "${dname}" == '..' ]] && continue; \
	echo -n "+${dname} "; \
done`

# neomutt related
color progress white red

# Send
set from	= "{{smtp_username}}@gmail.com"
set smtp_url	= "smtp://{{smtp_username}}:{{smtp_password}}@gmail.com@smtp.gmail.com:587/"
set hostname	= "gmail.com"
set ssl_force_tls = yes
unset ssl_starttls

source ~/.mail_aliases
set alias_file	= ~/.mail_aliases

set sidebar_width	= 20
set sidebar_visible	= yes
set mail_check_stats	= yes
set mail_check_stats_interval = 300
set sidebar_format	= "%B%* %N"
#set sidebar_delim	= ' '

macro index C "<copy-message>?<toggle-mailboxes>" "copy a message to a mailbox"
macro index M "<save-message>?<toggle-mailboxes>" "move a message to a mailbox"

### color of folders with new mail
color sidebar_new yellow default

### Key bindings
#macro index 'c' '<change-folder>?<change-dir><home>^K=<enter>'

bind index,pager \CP sidebar-prev
bind index,pager \CN sidebar-next
bind index,pager <f1> sidebar-open

## Remap bounce-message function to "B"
#bind index B bounce-message

unignore *
